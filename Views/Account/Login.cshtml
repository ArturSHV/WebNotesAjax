<!--Страница аккаунта-->

@using WebTatIntek.Models
@model LoginViewModel
@{
Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
          <div class="container">
               <div class="row">

                    <div class="col-md-12 col-sm-12">
                         <div class="section-title" style="text-align: center;">
                              <h2>Авторизация </h2> 
                             
                         </div>
                    </div>
                   
                    <div class="footer-info newsletter-form">
                    <!---->
                    <div class="form-group" style="max-width: 400px; margin: auto;"> 
                        
                        <p style="color:red">@ViewBag.Message</p>
                         <form asp-controller="Account" asp-action="Login" method="post">
                             
                             <span asp-validation-for="Login" style="color:red"></span>
                             <input type="text" asp-for="Login" class="form-control" placeholder="Логин"/>
                             <span asp-validation-for="Password" style="color:red"></span>
                             <input type="text" asp-for="Password" class="form-control" placeholder="Пароль"/><br/>
                             <p><input type="submit" value="Войти" /> </p>
                         </form>
                         
                    </div></div>
                    <!---->

               </div>
          </div>
     </section>




