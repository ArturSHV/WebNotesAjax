<!--Главная страница-->
@using WebTatIntek.Models

@{
    string[] tableColumnHeader = new string[] {"Id", "Название","Описание" };
}

@{
Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
          <div class="container">
               <div class="row">

                    <div class="col-md-12 col-sm-12">
                         <div class="section-title" style="text-align: center;">
                              <h2>Заметки</h2> 
                             
                         </div>
                    </div>

                   <button class="btn btn-primary" id="btnfillTable">Получить заметки</button>
                   <div class="table">
                       <table class="table table-bordered table-hover table-striped" id = "myTableId">
                           <thead>
                               <tr>
                                   @{
                                       foreach(string columnHead in tableColumnHeader)
                                       {
                                           <th>@columnHead</th>
                                       }
                                    }
                               </tr>
                           </thead>
                           <tbody>
                   
                           </tbody>
                       </table>
                   </div>
               </div>
          </div>
</section>


     